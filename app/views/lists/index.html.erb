<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'banner.jpg' %>);">
  <div class="container mt-5">
    <div class="row mx-auto my-auto py-auto justify-content-center align-items-center">
        <h1 style="text-shadow: 2px 2px #000000; margin-right: 16px">I want to watch:</h1>
        <span class="form-control" id="banner-typed-text" style="width: 20%; opacity: 0.7;"></span>
    </div>
  </div>
</div>



<div class="container" style="margin-top: 16px">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://loremflickr.com/320/<%= (200 + rand(0..40))%>/movie)">
        <%= link_to "#{list.name}", list_path(list) %>
        <span class="movies-count" style="text-shadow: 1px 1px #000000">
          <% if list.movies.count == 1 %>
            <%= list.movies.count %> movie
          <% else %>
            <%= list.movies.count %> movies
          <% end %>
        </span>
      </div>
    <% end %>
  </div>
</div>
