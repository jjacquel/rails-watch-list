<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto my-5">
      <div class="card p-4">
        <h1>Add a new List</h1>
          <%= simple_form_for @list do |f| %>
            <%= f.input :name %>
            <%= f.submit "Add List", class:"btn btn-primary" %>
          <% end %>
      </div>
      <hr>
      <%= link_to "Back", root_path, class: "btn btn-warning" %>
    </div>
  </div>
</div>


